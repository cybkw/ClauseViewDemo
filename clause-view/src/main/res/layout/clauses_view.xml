<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/clauses_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical"
    >
    <View
        android:id="@id/top_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clauses_view_default_remark_color"
        />
    <RelativeLayout
        android:id="@id/content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/draw_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/clauses_view_default_title_color"
        android:layout_toRightOf="@id/draw_left"
        android:layout_centerVertical="true"
        android:padding="5dp"
        />
    <TextView
        android:id="@id/remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/clauses_view_default_remark_color"
        android:layout_toLeftOf="@id/draw_right"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@id/draw_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    </RelativeLayout>
    <View
        android:id="@id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/clauses_view_default_remark_color"
        />
</LinearLayout>